root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentation for C, C++, Kotlin, CMake and Java
[*.{h,c,hpp,cpp,cmake,kt,java},CMakeLists.txt]
indent_style = space
indent_size = 4

# Indentation for YAML
[*.yaml,.clang-*]
indent_style = space
indent_size = 2
